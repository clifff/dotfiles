--type-set=coffeescript=.coffee
--type-set=css=.scss
--ignore-dir=public/cache
--ignore-dir=test/cassettes
--ignore-dir=tmp/

# Ruby
--type-set=foreman=Procfile
--type-add=ruby=Rakefile,Capfile,Gemfile
--type-set=erb=.erb,.rhmtl
--type-set=versions=.rvmrc,.rbenv-version,.ruby-version,.ruby-gemset

# JSON
--type-set=json=.json
--type-add=js=.json
# Conf
--type-set=conf=.conf,.config,.env
# Markdown, Textile, Rdoc
--type-set=markdown=.markdown,.md,.mdown,.mkd,.mkdn
--type-set=textile=.textile
--type-set=rdoc=.rdoc
# documentation
--type-set=documentation=.markdown,.md,.mdown,.mkd,.mkdn,.textile,.rdoc,.pod.txt
